{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2019",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@config": ["config/index"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*", "./mikro-orm.config.ts"],
  "exclude": ["node_modules", "dist"]
}
