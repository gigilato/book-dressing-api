{
  "name": "book-dressing-api",
  "version": "1.0.0",
  "description": "Book dressing nestjs & graphql api",
  "author": "gigilato",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "v12.22.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "migration:create": "mikro-orm migration:create",
    "migration:run": "mikro-orm migration:up",
    "seed:books": "node scripts/seed-books.js"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@mikro-orm/core": "^4.5.2",
    "@mikro-orm/nestjs": "^4.2.0",
    "@mikro-orm/postgresql": "^4.5.2",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.10.3",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.0.0",
    "apollo-server-express": "^2.22.2",
    "axios": "^0.21.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "firebase-admin": "^9.6.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4",
    "passport": "^0.4.1",
    "passport-custom": "^1.1.1",
    "passport-http": "^0.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@mikro-orm/cli": "^4.5.2",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/faker": "^5.5.1",
    "@types/hapi__joi": "^17.1.6",
    "@types/node": "^14.14.37",
    "@types/passport-http": "^0.3.8",
    "@types/passport-strategy": "^0.2.35",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.5.3",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  }
}
